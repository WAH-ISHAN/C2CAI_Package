{
  "name": "c2cai",
  "version": "0.1.10",
  "description": "Website RAG assistant (Sinhala/English/Tamil)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "c2cai": "bin/cli.js"
  },
  "scripts": {
    "build": "tsup src/**/*.ts --format esm,cjs --dts --sourcemap --clean",
    "prepublishOnly": "npm run build"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./server": {
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "./client": {
      "import": "./dist/widget.js",
      "require": "./dist/widget.cjs"
    }
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "nedb-promises": "^6.2.3",
    "openai": "^4.55.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/webidl-conversions": "^7.0.3",
    "@types/whatwg-url": "^13.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.5.4"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
