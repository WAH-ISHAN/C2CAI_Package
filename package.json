{
  "name": "c2cai",
  "version": "0.1.0",
  "description": "Website RAG assistant (Sinhala/English/Tamil) with auto setup",
  "type": "module",
  "bin": { "c2cai": "bin/cli.js" },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "require": "./dist/server.cjs",
      "types": "./dist/server.d.ts"
    },
    "./client": {
      "import": "./dist/client/widget.js",
      "require": "./dist/client/widget.cjs",
      "types": "./dist/client/widget.d.ts"
    }
  },
  "files": ["dist", "bin", "scripts", "README.md", "LICENSE"],
  "scripts": {
    "build": "tsup src/index.ts src/server.ts src/client/widget.ts --format esm,cjs --dts",
    "dev": "tsup --watch",
    "postinstall": "node ./scripts/postinstall.js",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "openai": "^4.55.0",
    "express": "^4.19.2",
    "better-sqlite3": "^9.4.0",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.5.4",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30"
  },
  "engines": { "node": ">=18.17" },
  "license": "MIT",
  "repository": { "type": "git", "url": "https://github.com/WAH-ISHAN/C2CAI_Package.git" }
}