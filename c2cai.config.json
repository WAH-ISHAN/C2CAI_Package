{
  "openai": {
    "model": "gpt-4o-mini",
    "temperature": 0
  },
  "crawler": {
    "chunkSize": 2000,
    "chunkOverlap": 300,
    "maxPages": 10
  },
  "voice": {
    "defaultLang": "si-LK",
    "languages": ["si-LK", "en-US", "ta-IN"]
  },
  "sales": {
    "enableLeadCapture": true,
    "recommendPrompt": "Recommend products/services if relevant."
  },
  "promptTemplate": "Context: {context}\nQuestion: {question}\nSales Tip: {salesTip}\nAnswer in detail:"
}